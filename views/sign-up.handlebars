<div class="card">
    <h3 class="card-title">Sign Up</h3>
    <form id="signup-form" class="card-body">
        <label for="name-signup" class="form-label">Name</label>
        <input id="name-signup" type="text" class="form-input" />

        <label for="email-signup" class="form-label">Email</label>
        <input id="email-signup" type="text" class="form-input" />


        <label for="password-signup" class="form-label">Password</label>
        <input id="password-signup" type="password" class="form-input" />

        <button type="submit" class="btn">Signup!</button>
        <a class="login-link" href="/">Log in instead</a>
    </form>
</div>

<script src="./js/signup.js"></script>