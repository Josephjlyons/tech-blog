<div class="card">
    <h3 class="card-title">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title:</label><br>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input" />
        <br>
        <label class="form-label" for="content">Content:</label>
        <br>
        <textarea name="content" type="text" value="{{post.content}}" cols="100" rows="10"></textarea>
        <br>
        <button type="submit" class="btn">Update Post</button>
        <br>
        <button type="button" class="delete-post-btn btn">Delete Post</button>

    </form>

</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>